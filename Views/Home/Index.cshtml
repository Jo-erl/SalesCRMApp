@{
    ViewData["Title"] = "Home Page";
}

<style>
    #slideshow {
        position: relative;
        width: 1100px;
        height: 400px;
        border-radius: 20px;
        overflow: hidden;
        margin: 0 auto;
        padding-bottom: 60%;
    }

        #slideshow img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
            border-radius: 20px;
            object-fit: cover;
            object-position: center;
        }

            #slideshow img.active {
                opacity: 1;
            }

</style>

<div id="slideshow">
    <img src="~/lib/1.jpg" />
    <img src="~/lib/2.jpg" />
    <img src="~/lib/3.jpg" />
    <img src="~/lib/4.jpg" />
    <img src="~/lib/5.jpg" />
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var images = $('#slideshow img');
        var i = 0;

        setInterval(function () {
            $(images[i]).removeClass('active');
            i = (i + 1) % images.length;
            $(images[i]).addClass('active');
        }, 2000);
    });
</script>